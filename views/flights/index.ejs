<%- include('../partials/header') %>

<h1>All flights...</h1>

<table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight #</th>
        <th>Departure</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(flight) { %>
            <tr>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departs %></td>
          <td><a href="/flights/<%= flight.id %>">Click here</a></td>
        </tr>
        <% }); %>
    </tbody>
  </table>

<%- include('../partials/footer') %>
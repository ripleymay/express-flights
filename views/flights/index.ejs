<%- include('../partials/header') %>

<h1>All flights...</h1>

<table>
    <thead>
      <tr>
        <th>Details</th>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight #</th>
        <th>Departure</th>
      </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(flight) { %>
        <tr <%- flight.departs < new Date ? 'class="passed"' : '' %>>
          <td><a href="/flights/<%= flight.id %>">&#128269;</a></td>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departs.toLocaleString() %></td>
        </tr>
        <% }); %>
    </tbody>
  </table>

<%- include('../partials/footer') %>
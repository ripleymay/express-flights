<%- include('../partials/header') %>

<h1>Make a new flight...</h1>

<form id="add-flight" action="/flights" method="POST">
    <label>Airline:
        <select name="airline">
            <option disabled selected value></option>
            <option value="American">American</option>
            <option value="Southwest">Southwest</option>
            <option value="United">United</option>
        </select>
    </label><br>
    <label>Airport:
        <select name="airport">
            <option value="AUS">AUS</option>
            <option value="DFW">DFW</option>
            <option value="DEN" selected>DEN</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
        </select>
    </label><br>
    <label>Flight #:
        <input type="text" name="flightNo">
    </label><br>
    <label>Departs:
        <input type="datetime-local" name="departs" value=<%= departs %>>
    </label><br>
    <input type="submit" value="Add Flight" class="button">
</form>

<%- include('../partials/footer') %>